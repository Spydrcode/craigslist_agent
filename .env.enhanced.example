# ==========================================
# ENHANCED PROSPECTING SYSTEM CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your API keys

# ==========================================
# REQUIRED: AI/ML Services
# ==========================================

# OpenAI API (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative: Anthropic Claude (Optional)
ANTHROPIC_API_KEY=your-anthropic-key-here

# ==========================================
# RECOMMENDED: Data Storage
# ==========================================

# Pinecone (for semantic search and embeddings)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=company-prospects

# Supabase (for database storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ==========================================
# OPTIONAL: Company Research APIs
# ==========================================

# Google Custom Search (for better company search)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-custom-search-engine-id

# Crunchbase (for funding and company data)
CRUNCHBASE_API_KEY=your-crunchbase-api-key

# Clearbit (for company enrichment)
CLEARBIT_API_KEY=your-clearbit-api-key

# Hunter.io (for email finding)
HUNTER_API_KEY=your-hunter-api-key

# BuiltWith (for tech stack detection)
BUILTWITH_API_KEY=your-builtwith-api-key

# LinkedIn (requires premium account)
LINKEDIN_ACCESS_TOKEN=your-linkedin-token

# ==========================================
# BUSINESS CONFIGURATION
# ==========================================

# Your company information
YOUR_COMPANY_NAME=Your Company Name
YOUR_COMPANY_SPECIALTIES=Machine Learning,Data Engineering,Cloud Infrastructure

# Target criteria
TARGET_INDUSTRIES=technology,software,fintech,healthcare tech,saas,e-commerce
MIN_COMPANY_SIZE=20
MAX_COMPANY_SIZE=500

# ==========================================
# SCORING THRESHOLDS
# ==========================================

# Minimum scores for qualification
MIN_GROWTH_SCORE=0.3
MIN_LEAD_SCORE=40.0
MIN_OPPORTUNITY_CONFIDENCE=0.4

# ==========================================
# RESEARCH FEATURES
# ==========================================

# Enable/disable research features
ENABLE_WEB_RESEARCH=true
ENABLE_TECH_STACK_DETECTION=false
ENABLE_EMAIL_FINDING=false

# ==========================================
# SCRAPING CONFIGURATION
# ==========================================

SCRAPING_DELAY_MIN=2
SCRAPING_DELAY_MAX=5
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# ==========================================
# OUTPUT CONFIGURATION
# ==========================================

OUTPUT_DIR=output/prospects
EXPORT_FORMAT=both
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=logs
